<button id="changeTheme" class="text-white relative w-5 flex items-center justify-center">
  <span id="sun" class="absolute opacity-0 transition-opacity -z-10">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
    </svg>
  </span>
  <span id="moon" class="absolute opacity-0 transition-opacity -z-10">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
    </svg>
  </span>  
</button>

<script>
  const sun = document.getElementById('sun');
  const moon = document.getElementById('moon');
  const html = document.querySelector('html');

  const POSIBLES_THEMES = ['dark', 'light']

  window.onload = () => {
    const themeDesktop = window.matchMedia ? (window.matchMedia('(prefers-color-scheme: dark)') ? 'dark' : 'light') : 'light';
    const themeLocal = localStorage.getItem('campus-theme');

    const theme = (themeLocal && POSIBLES_THEMES.includes(themeLocal)) ? themeLocal : themeDesktop

    html?.setAttribute('data-theme', theme);

    localStorage.setItem('campus-theme', theme);

    const verifyTheme = () => {

      let theme = html?.getAttribute('data-theme');

      if (theme === 'light') {
        moon?.classList.add('active');
        sun?.classList.remove('active');
      }else {
        moon?.classList.remove('active');
        sun?.classList.add('active');
      }
    }

    verifyTheme();

    document.querySelector('#changeTheme')?.addEventListener('click', () => {
      let theme = html?.getAttribute('data-theme') === 'dark' ? 'light' : 'dark'
      html?.setAttribute('data-theme', theme);
      localStorage.setItem('campus-theme', theme);
      verifyTheme();
    })
  }
</script>

<style>
  .active {
    z-index: 10 !important;
    opacity: 1 !important;
  }
</style>