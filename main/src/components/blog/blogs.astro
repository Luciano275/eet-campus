---
import { format } from 'date-fns';
import { es } from 'date-fns/locale/es'

import { findAllBlogs } from '@lib/blogs'

const blogs = await findAllBlogs();
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  {blogs.map((blog) => (
      <article class="transition-colors min-h-[400px] border border-base-300 p-4 rounded-xl bg-base-100 hover:bg-base-200 flex flex-col gap-4">
        <p class="text-sm opacity-60">{format(new Date(blog.createdAt), "dd 'de' MMMM 'del' yyyy", { locale: es })}</p>
        <h2 class="text-2xl font-semibold pb-4 border-b">{blog.title}</h2>
        <p class="text-justify grow">
          {blog.description}
        </p>
        <a href={`/blog/${blog.id}`} class="bg-blue-500 text-center py-2 px-4 rounded-lg text-white hover:bg-blue-600">Leer m√°s</a>
      </article>
    )
  )}
</div>